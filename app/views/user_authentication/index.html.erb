<h1>List of users</h1>

<table border="1">
  <tr>
    <th>
      Username
    </th>
    <th>
      Private?
    </th>
    <th>
      
    </th>
    <th>
      
    </th>
  </tr>
    <% @list_of_users.each do |a_user| %>
        <tr>
          <td>
            <%= a_user.username %>
          </td>
          <td>
            <%= a_user.private_user %>
          </td>
            <td>
              <% if session.fetch(:user_id) != nil %>
                <form action="/insert_follow_request" method="post">
                  <input type="hidden" name="query_recipient_id" value="<%= a_user.id %>">
                  <input type="hidden" name="query_status" value="<%= a_user.private_user %>">

                  <button>
                    Follow
                  </button>
                </form>
              <% end %> 
            </td>
          <td>
            <a href="/users/<%= a_user.username %>">Show details</a>
          </td>
        </tr>
      <% end %>
</table>