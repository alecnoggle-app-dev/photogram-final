<h1>
  <%= @the_user.username %>
</h1>

<dl>
  <dt>Private</dt>
    <dd><%= @the_user.private? %></dd>
  <dt>Followers</dt>
    <dd><%= @the_user.receivedfollowrequests.where({ :status => "accepted" }).count %></dd>
  <dt>Following</dt>
    <dd><%= @the_user.sentfollowrequests.where({ :status => "accepted" }).count %></dd>
</dl>

<ul>
  <li><a href="/users/<%= @the_user.username %>">Profile</a></li>
  <li><a href="/users/<%= @the_user.username %>/liked_photos">Liked photos</a></li>
  <li><a href="/users/<%= @the_user.username %>/feed">Feed</a></li>
  <li><a href="/users/<%= @the_user.username %>/discover">Discover</a></li>
</ul>
  
<h2>Feed (<%#= %>)</h2>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Owner</th>
    <th>Caption</th>
    <th>Posted</th>
    <th>Likes</th>
    <th></th>
  </tr>

  <tr>
    <%# @list_of_photos.each do |a_photo| %>
      <td><%#= a_photo.image %></td>
      <td><%#= a_photo.owner %></td>
      <td><%#= a_photo.caption %></td>
      <td><%#= time_ago_in_words(a_photo.created_at) %> ago</td>
      <td><%#= a_photo.likes_count %></td>
      <td><a href="/photos/<%#= a_photo.id %>">Show details</a></td>
    <%# end %>
  </tr>
</table>
